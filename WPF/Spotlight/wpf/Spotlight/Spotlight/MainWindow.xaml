<Window x:Class="Spotlight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spotlight"
        mc:Ignorable="d"
        Title="Microsoft Spotlight" Height="450" Width="700">
    <Grid>
        <Label x:Name="FileName" Content="FileName" HorizontalAlignment="Left" Height="42" Margin="38,36,0,0" VerticalAlignment="Top" Width="100" FontSize="20"/>
        <TextBox x:Name="fname" HorizontalAlignment="Left" Height="42" Margin="143,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="335" FontSize="20"/>
        <Button x:Name="Search" Content="Search" HorizontalAlignment="Left" Height="42" Margin="498,36,0,0" VerticalAlignment="Top" Width="137" FontSize="20" Click="Search_Click"/>
        <TextBox x:Name="SearchResults" HorizontalAlignment="Left" Height="219" Margin="38,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="597" FontSize="18" HorizontalScrollBarVisibility="Visible"
         VerticalScrollBarVisibility="Visible" IsEnabled="False" Visibility="Hidden"/>
        <Button x:Name="Stop" Content="Stop" HorizontalAlignment="Left" Height="42" Margin="38,348,0,0" VerticalAlignment="Top" Width="137" FontSize="20" Click="Stop_Click"/>
    </Grid>
</Window>
